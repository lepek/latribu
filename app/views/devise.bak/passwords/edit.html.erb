<div id="content-inner">
    <h2>Cambiar contrase単a</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <fieldset class="gray">
        <div class="clearfix">
          <%= f.label :password, "Nueva contrase単a" %>
          <div class="input">
            <%= f.password_field :password, :autofocus => true %> [La clave debe tener 8 caracteres]
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :password_confirmation, "Confirmar contrase単a" %>
          <div class="input">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit 'Cambiar mi contrase単a', :class => "btn primary" %>
        </div>
      </fieldset>
    <% end %>

</div>