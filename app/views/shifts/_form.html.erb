<%= simple_form_for(@shift) do |f| %>
  <%= f.input :week_day, collection: t('date.day_names').zip((1..7).to_a), include_blank: false, autofocus: true %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :max_attendants %>
  <%= f.input :open_inscription, hint: 'cantidad de horas antes de la clase en que se abre la inscripción' %>
  <%= f.input :close_inscription, hint: 'cantidad de horas antes de la clase en que se cierra la inscripción' %>
  <%= f.input :cancel_inscription, hint: 'cantidad de horas antes de la clase en que se deshabilita la opción de liberar' %>
  <%= f.association :instructor, label_method: :full_name, include_blank: false %>
  <%= f.association :discipline, include_blank: false %>

  <%= f.submit 'Guardar', data: { disable_with: "Procesando..." }, class: "btn btn-primary" %>
  <%= link_to "Volver", :back, class: "btn btn-default" %>
<% end %>