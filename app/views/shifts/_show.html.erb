<div id="content-inner" xmlns="http://www.w3.org/1999/html">
  <% if shift.nil? %>
    <h1>No hay más clases para el día de hoy</h1>
  <% else %>
    <h1><%= l(shift.current_fixed_shift, :format => '%A, %e de %B %H:%M hs.') %></h1>

    <p>
      <b>Cupo:</b>
      <%= shift.max_attendants %>
    </p>

    <p>
      <b>Anotados:</b>
      <%= shift.current_fixed_shift_count %>
    </p>

    <p>
      La inscripci&oacute;n est&aacute; <b><%= shift.status %></b>
    </p>

    <p>
      La inscripci&oacute;n abre <b><%= shift.open_inscription %> horas</b> antes
    </p>

    <p>
      La inscripci&oacute;n cierra <b><%= shift.close_inscription %> horas</b> antes
    </p>

    <p>
      <b>Instructor:</b>
      <%= shift.instructor.full_name %>
    </p>

    <p>
      <b>Disciplina:</b>
      <%= shift.discipline.name %>
    </p>

    <%= render partial: "shifts/user_list", locals: {shift: shift} %>

  <% end %>

</div>