<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Turnos</h4>
  </div>
  <div class="panel-body">
    <div id='calendar'></div>
  </div>
</div>

<!-- MODAL -->
<div id="bookModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span> <span class="sr-only">close</span></button>
        <h4 id="bookModalTitle" class="modal-title">Inscripción</h4>
      </div>
      <div id="bookBody" class="modal-body">
        Te inscribiste a:
        <ul>
          <li><span id="bookTitle" style="font-weight: bold"></span></li>
          <li><span id="bookDate" style="font-weight: bold"></span></li>
        </ul>
        Tienes hasta las <span id="deadline" style="font-weight: bold"></span> para liberar y recuperar el crédito.
      </div>
      <div class="modal-footer">
        <button type="button" id="accept-book" class="btn btn-default" data-dismiss="modal">Aceptar</button>
      </div>
    </div>
  </div>
</div>

<!-- MODAL -->
<div id="cancelModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span> <span class="sr-only">close</span></button>
        <h4 id="cancelModalTitle" class="modal-title">Inscripción</h4>
      </div>
      <div id="cancelBody" class="modal-body">
        Liberaste la clase:
        <ul>
          <li><span id="cancelTitle" style="font-weight: bold"></span></li>
          <li><span id="cancelDate" style="font-weight: bold"></span></li>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" id="accept-cancel" class="btn btn-default" data-dismiss="modal">Aceptar</button>
      </div>
    </div>
  </div>
</div>

<div id="loading">
  <img id="loading-image" src=<%= image_url("spinner.gif") %> alt="Loading..." />
</div>