<% content_for :stylesheets do %>
    <%= stylesheet_link_tag :datatables %>
<% end %>

<% content_for :javascripts do %>
    <%= javascript_include_tag :datatables, :admin_index %>
<% end %>
<div id="content-inner">
  <h1>Nuevo Pago</h1>
  <%= render 'form' %>
  <%= link_to 'Volver', root_path(:anchor => 'users') %>
</div>
<script>

    $(document).ready(function() { $("#payment_user_id").select2(); });

    $(document).ready(function() {
        var oTable = $("#user-payments-table").userPaymentsTable();
        oTable.ajax.url("/payments/user_payments/<%= @user.id %>.json").load();

        $('#payment_user_id').change( function () {
            user_id = $('#payment_user_id').val()
            if (user_id) {
                oTable.ajax.url("/payments/user_payments/" + user_id + ".json").load();
            }
        } );
    } );

</script>