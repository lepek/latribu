<% content_for :stylesheets do %>
    <%= stylesheet_link_tag :datatables %>
<% end %>

<% content_for :javascripts do %>
    <%= javascript_include_tag :datatables, :admin_index %>
<% end %>
<div id="content-inner">
  <h1>Nuevo Pago</h1>
  <%= render 'form' %>
  <%= link_to 'Volver', root_path(:anchor => 'payments') %>
</div>
<script>
    $(document).ready(function() { $("#payment_user_id").select2(); });

    $(document).ready(function() {
        var oTable = $('#user-payments-table').dataTable();

        $('#payment_user_id').change( function () {
            user_id = $('#payment_user_id').val()
            if (user_id) {
                var nHidden = oTable.fnReloadAjax("/payments/user_payments/" + user_id);
            }
        } );
    } );

</script>