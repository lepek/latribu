<%= form_for @payment do |f| %>
    <% if @payment.errors.any? %>
        <div id="error_explanation">
          <h2><%= t 'errors.header.male', :resource => 'Pago', :count => @payment.errors.count %></h2>
          <ul>
            <% @payment.errors.each do |attr, msg| %>
                <li>
                  <%= msg %>
                </li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset class="gray">
      <div class="clearfix">
        <%= f.label :user_id %>
        <div class="input">
          <%= f.collection_select(:user_id, User.clients.order("last_name"), :id, :full_name_email, prompt: true)  %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :month %>
        <div class="input">
          <%= f.select :month, options_for_select(Payment.months.invert, Chronic.parse("now").strftime('%B').downcase ), {}, :style => "text-transform:capitalize" %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :amount %>
        <div class="input">
          <%= f.text_field :amount %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :credit %>
        <div class="input">
          <%= f.text_field :credit %>
        </div>
      </div>
    </fieldset>

    <div class="clearfix"><%= f.label 'Pagos anteriores' %></div>
      <div class="clearfix">
            <% datatable "user-payments-table", ["Fecha de pago", "Mes acreditado", "Monto", "CrÃ©dito", ""], :class => "selectable" do -%>
            <% end -%>
      </div>

      <div class="actions">
        <%= f.submit 'Guardar', :class => "btn primary" %>
      </div>

<% end %>