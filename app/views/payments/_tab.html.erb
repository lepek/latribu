<fieldset class="gray">
  <%= button_to "Agregar un nuevo Pago", new_payment_path, :method => "get" %>
</fieldset>
<% datatable "payments-table", ["Cliente","Email", "Fecha último pago", "Monto", "Crédito","", ""], :class => "selectable" do -%>
    <% payments.each do |payment| -%>
        <tr>
          <td><%= payment.user.full_name %></td>
          <td><%= payment.user.email %></td>
          <td><%= l(payment.created_at, :format => '%A, %e de %B %H:%M hs.') %></td>
          <td><%= payment.amount %></td>
          <td><%= payment.credit %></td>
          <td>
            <%= button_to "Borrar", {:action=>"destroy", :controller=>"payments", :id => payment}, data: { confirm: "¿Está seguro que desea eliminar \nel pago de #{payment.user.full_name.upcase}?" }, :method => :delete %>
          </td>
          <td><%= payment.created_at %></td>
        </tr>
    <% end -%>
<% end -%>