<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= l(@shift.next_fixed_shift, :format => '%A, %e de %B %H:%M hs.').capitalize %> - Inscripci√≥n de prueba</h4>
  </div>
  <div class="panel-body">
    <%= simple_form_for(@rooky) do |f| %>
      <%= f.input :shift_id, as: :hidden, input_html: { value: @shift.id } %>
      <%= f.input :full_name, autofocus: true %>
      <%= f.input :phone %>
      <%= f.input :email %>
      <%= f.input :notes %>
      <%= f.submit 'Guardar', data: { disable_with: "Procesando..." }, class: "btn btn-primary" %>
      <%= link_to "Volver", :back, class: "btn btn-default" %>
    <% end %>
  </div>
</div>
